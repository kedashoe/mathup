{
  "env": {
    "node": true,
    "browser": false
  },

  "parserOptions": {
    "ecmaVersion": "2019",
    "sourceType": "module"
  },

  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],

  "rules": {
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ]
  }
}
